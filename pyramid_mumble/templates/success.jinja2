{% extends "layout.jinja2" %}

{% block header %}
    <div class="header row">
        <div class="col text-center">
             <h2><span class="font-semi-bold">Success</span></h2>
        </div>
    </div>
{% endblock %}

{% block content %}
<div class="content row">
    <div class="col-md-3"></div>
    <div class="success-box col-md-8">
        <p>Dear <strong>{{ realname }}</strong><br>
            you have been successfully {{ action }} to the <strong>{{ project }}</strong>.</p>
        {{ message|safe }}
    </div>
</div>
{% endblock content %}

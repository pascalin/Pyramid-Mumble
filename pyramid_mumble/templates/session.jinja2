{% extends "layout.jinja2" %}

{% block header %}
    <div class="header row">
        <div class="col text-center">
            <h2><span class="font-semi-bold">{{ session }}</span></h2>
        </div>
    </div>
{% endblock %}

{% block content %}
<div class="content row">
    <div class="col-md-4">
        <p>
            <span class="font-bold">Track</span>: <em><span class="font-normal">{{ session.track }}</span></em><br>
            <span class="font-bold">Starts</span>: <em><span class="font-normal">{{ session.start_time }}</span></em><br>
            <span class="font-bold">Ends</span>: <em><span class="font-normal">{{ session.end_time }}</span></em><br>
        </p>
        <blockquote>
            {{ session.description }}
        </blockquote>
    </div>
    <div class="col-md-6">
        <ul>
        {% for activity in session.activities %}
            <li><a href="{{ request.route_path('activity', activity_id=activity.id) }}">{{ activity.title }}</a>
            {% for profile in activity.performers %}
                <ul>
                <li><a href="{{ request.route_path('profile', uid=profile.id) }}">{{ profile.realname }}</a></li>
                </ul>
            {% endfor %}
            </li>
        {% endfor %}
        </ul>
    </div>
</div>
{% endblock content %}
